<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileSelectorActivity">

    <RelativeLayout
        android:id="@+id/top_title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp">


        <ImageButton
            android:id="@+id/bt_leftButton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/icon_back_black"
            android:textColor="@color/color_gray8"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bt_rightButton"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/save"
            android:textColor="@color/file_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/bt_rightButton"
            android:layout_toRightOf="@id/bt_leftButton"
            android:ellipsize="start"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#000"
            android:textSize="18sp" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/framlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_title_layout" />


</RelativeLayout>
