<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_all_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp">


        <ImageButton
            android:id="@+id/bt_leftButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/icon_back_black"
             />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="start"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/file_manager"
            android:textColor="#000"
            android:textSize="18sp" />


    </RelativeLayout>

    <!--手机内存-->
    <RelativeLayout
        android:id="@+id/layout_memory_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/selector_bg_list_item"
        android:paddingLeft="23dp"
        android:layout_marginTop="9dp">

        <ImageView
            android:id="@+id/iv_memory_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_category_storage" />

        <TextView
            android:id="@+id/tv_memory_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/iv_memory_phone"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/phone_ram"
            android:textColor="@color/color_text_black"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="23dp"
            android:src="@drawable/icon_list_row" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/iv_memory_phone"
            android:layout_marginRight="-23dp"
            android:background="@color/color_all_bg" />
    </RelativeLayout>
    <!--SD卡内存-->
    <RelativeLayout
        android:id="@+id/layout_memory_sd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/selector_bg_list_item"
        android:paddingLeft="23dp"
        android:paddingRight="23dp">

        <ImageView
            android:id="@+id/iv_memory_sd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_category_sdcard" />



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_toLeftOf="@id/iv_right_memory_sd"
            android:layout_toRightOf="@id/iv_memory_sd"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/sd_ram"
            android:textColor="#101010"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/iv_right_memory_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_list_row" />

    </RelativeLayout>
</LinearLayout>
